      </div>
      <div class="description">
        <p>{{course.description}}</p>
      </div>
      <div id="reviews">
        <h2 id="ratings">Reviews:</h2>
      <p><a href = "/review/{{code}}">Leave a review</a></p>
        {{#each review}}
        <div>
          <p>{{review.datePosted}}</p>
          <p>Tags</p>
          <ul>
            {{#each review.tags}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          <p>{{review.review}}</p>
          <div class="comments">
            {{#each review.comments}}
            <div class="singleComment">
              <p>{{this.datePosted}}</p>
              <p>{{this.comment}}</p>
            </div>
            {{/each}}
          </div>
        </div>
        {{/each}}
      </div>
    </div>
