        <div id="container" class="container">
            <div class="row text-white">
                <div class="col-sm-6 offset-sm-3 text-center">
                    <div class="info-form">
                        <form action="/search" class="form-inlin justify-content-center" id="searchBar" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="form-group" id="searchDiv">
                              <label for = "searchInput"></label>
                              <input id = "searchInput" type="text" class="form-control" placeholder="Search by course name, course code, course description or professor" name="searchInput" required>
                              <select class="form-control" id="searchtype" name="searchtype">
                                <option value="any" selected>Any</option>
                                <option value="name">Course Name</option>
                                <option value="code">Course Code</option>
                                <option value="desc">Course Description</option>
                                <option value="prof">Professor</option>
                              </select>
                                <br>
                                <button type="submit" class="btn btn-danger">Search!</button>
                            </div>
                            </form>
                            {{#if errors2}}
                            <p id="searchError">Error: Search did not return any results.</p>
                            {{/if}}
                          </div>
                        </div>
                        </div>
                      </div>
